<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SPL_Menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <include
            android:layout_width="300sp"
            android:layout_height="match_parent"
            layout="@layout/content_menu"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true">
            <android.support.v7.widget.Toolbar

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbar"
                app:titleTextColor="@color/colorPrimaryDark"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/toolbar_title"
                    android:layout_width="120sp"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/chefs_logo_2"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    />
            </android.support.v7.widget.Toolbar>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/back_chefs_2"
                android:layout_below="@+id/toolbar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:layout_below="@+id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ultra_light_white"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/TV_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Text_Dimens_H5"
                        android:text="@string/cargando"
                        android:gravity="center"
                        android:layout_margin="20sp"
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>


</android.support.v4.widget.SlidingPaneLayout>

